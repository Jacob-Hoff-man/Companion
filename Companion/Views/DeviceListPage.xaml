<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Companion.Views.DeviceListPage">

<NavigationPage.TitleView>
    <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
            <Image Source="bluetooth_icon.png" />
            <Label Text="Searching For Bluetooth Devices" />
    </StackLayout>
</NavigationPage.TitleView>

    <ContentPage.Content>

        <StackLayout>
             <Frame BackgroundColor="DarkGray" Padding="24" CornerRadius="0">
                <Label Text="Select a Cycle Statistic Tool to connect to:" VerticalOptions="Center" HorizontalOptions="Center" />
            </Frame>

            <ListView
                x:Name="listView"
                BackgroundColor="White"
                HorizontalOptions="FillAndExpand"
                ItemTapped="Device_ItemTapped"
                VerticalOptions="FillAndExpand">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                            Detail="{Binding Id}"
                            Text="{Binding Name}"
                            TextColor="Black" />
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>
        
    </ContentPage.Content>

</ContentPage>