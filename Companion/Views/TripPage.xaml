                        </FormattedString>
                    </Label.FormattedText>
                </Label>
           
                <Label Grid.Column="0" Grid.Row="10" FontAttributes="Bold" FontSize="Medium" Text="Calories: " />
                <Label Grid.Column="1" Grid.Row="10" FontAttributes="Bold" FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding RecordedData.Calories}" />
                            <Span Text=" kC" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Grid.Column="0" Grid.Row="11" FontAttributes="Bold" FontSize="Medium" Text="Torque: " />
                <Label Grid.Column="1" Grid.Row="11" FontAttributes="Bold" FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding RecordedData.Torque}" />
                            <Span Text=" Nm" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Grid.Column="0" Grid.Row="12" FontAttributes="Bold" FontSize="Medium" Text="Mass: " />
                <Label Grid.Column="1" Grid.Row="12" FontAttributes="Bold" FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding RecordedData.Mass}" />
                            <Span Text=" kg" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Grid.Column="0" Grid.Row="13" FontAttributes="Bold" FontSize="Medium" Text="Gear Ratio: " />
                <Label Grid.Column="1" Grid.Row="13" FontAttributes="Bold" FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding RecordedData.GearRatio}" />
                            <!--<Span Text="" />-->
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
    
                <Label Grid.Column="0" Grid.Row="14" FontAttributes="Bold" FontSize="Medium" Text="Cadence: " />
                <Label Grid.Column="1" Grid.Row="14" FontAttributes="Bold" FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding RecordedData.Cadence}" />
                            <Span Text=" ppm" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

            <!---->
                <Label Grid.Column="0" Grid.Row="15" FontAttributes="Bold" FontSize="Medium" Text="Wind Speed: " TextColor="AntiqueWhite" />
                <Label Grid.Column="1" Grid.Row="15" FontAttributes="Bold" FontSize="Medium" TextColor="AntiqueWhite">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding RecordedData.WindSpeed}" />
                            <Span Text=" m/s" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

            <!---->
                <Label Grid.Column="0" Grid.Row="16" FontAttributes="Bold" FontSize="Medium" Text="Wind Direction: " TextColor="AntiqueWhite" />
                <Label Grid.Column="1" Grid.Row="16" FontAttributes="Bold" FontSize="Medium" TextColor="AntiqueWhite">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding RecordedData.WindDirection}" />
                            <Span Text=" °" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Grid.Column="0" Grid.Row="17" FontAttributes="Bold" FontSize="Medium" Text="Trip Time: " />
                <Label Grid.Column="1" Grid.Row="17" FontAttributes="Bold" FontSize="Medium">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding ElapsedTime, StringFormat='{0:hh\\:mm\\:ss}'}" />
                            <!--<Span Text="" />-->
                        </FormattedString>
                    </Label.FormattedText>
                </Label>



        </Grid>


