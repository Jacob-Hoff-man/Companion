                        <FormattedString>
                            <Span Text="{Binding RecordedData.Longitude}" />
                            <Span Text=" °" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

            <!---->
                <Label Grid.Column="0" Grid.Row="7" FontAttributes="Bold" FontSize="Medium" Text="Compass: " TextColor="AntiqueWhite" />
